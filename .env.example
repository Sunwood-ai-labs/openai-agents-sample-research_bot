# LLMプロバイダー設定
# OpenAIの場合は設定不要、他のプロバイダーの場合は適切なURLを設定
OPENAI_API_BASE="http://localhost:1234/v1"
OPENAI_API_KEY="your-api-key-here"

# モデル設定
# 使用するモデル名を指定
# OpenAIの場合: gpt-4, gpt-3.5-turbo など
# 他のプロバイダーの場合: プロバイダーが提供するモデル名
OPENAI_MODEL_NAME="gpt-3.5-turbo"

# アプリケーション設定
# 検索設定
# 必要に応じて調整してください
MAX_SEARCHES=10
SEARCH_TIMEOUT=30
REPORT_MIN_WORDS=1000
